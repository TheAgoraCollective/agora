---
import "../styles/global.css";
import UserStatus from '../components/UserStatus.svelte'; // <-- 1. IMPORT the new component

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="The Agora Collective" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen">
		<header class="p-4 border-b border-gray-200 dark:border-gray-700">
			<nav class="container mx-auto flex justify-between items-center">
				<a href="/" class="text-2xl font-bold">Agora</a>
				<UserStatus client:load /> 

			</nav>
		</header>
		<main class="container mx-auto p-4">
			<slot />
		</main>
	</body>
</html>
